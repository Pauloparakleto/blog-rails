<!DOCTYPE html>
<html>
  <head>
    <title><%= html_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render 'shared/meta_tags' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script async defer data-domain="ananunedasilva.com" src="https://plausible.io/js/plausible.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
    <link rel="stylesheet" href="/build/tailwind.css">
  </head>

  <body class="flex flex-col min-h-screen font-sans bg-white dark:bg-gray-900" data-controller="application">
    <div class="flex-grow">
      <header class="text-gray-900 dark:text-gray-50">
        <%= render partial: 'shared/navbar' unless @skip_navbar %>
      <header>

      <section>
        <%= yield %>
      </section>
    </div>
    <%= render partial: 'shared/footer' unless @skip_footer%>
  </body>
</html>
